{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Jekyll Serve",
        "runtimeExecutable": "bundle",
        "args": [
          "exec",
          "jekyll",
          "serve",
          "--livereload"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      }
    ]
  }
  